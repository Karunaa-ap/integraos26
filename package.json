  "build": {
    "appId": "com.integrasystems.os",
    "productName": "IntegraOS",
    "asar": false,
    "files": [
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "electron-main.js",
      "preload.js",
      "server.js",
      "package.json"
    ],
    "asarUnpack": [
    "node_modules/**/*"
  ],
  "extraResources": [
    {
      "from": "node_modules",
      "to": "app/node_modules",
      "filter": ["**/*"]
    }
  ],

  
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
